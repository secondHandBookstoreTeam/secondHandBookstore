/* pages/cart/index.scss */
.get_address_row {
  padding: 20rpx; }
  .get_address_row .address_btnp button {
    width: 60%; }

.address_info {
  clear: both;
  overflow: hidden;
  padding: 20rpx; }
  .address_info .telephone {
    float: right; }
  .address_info .address {
