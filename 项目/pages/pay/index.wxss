/*购物车列表*/
.cart_content .title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-top: 1px solid currentColor;
  border-bottom: 1px solid currentColor;
  font-weight: 600; }
.cart_content .main .item {
  display: flex;
  align-items: center;
  height: 200rpx;
  border-bottom: 1px solid #666666;
  padding-bottom: 10rpx;
  margin-top: 20rpx; }
  .cart_content .main .item .img_wrap {
    flex: 3;
    height: 99%;
    overflow: hidden;
    padding-left: 15rpx; }
    .cart_content .main .item .img_wrap image {
      width: 85%; }
  .cart_content .main .item .info_wrap {
    flex: 5;
    padding-right: 10rpx;
    display: flex;
    flex-direction: column; }
    .cart_content .main .item .info_wrap .name {
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      margin-bottom: 30rpx;
      font-size: 32rpx; }
    .cart_content .main .item .info_wrap .row {
      display: flex;
      align-items: center;
      justify-content: space-between; }
      .cart_content .main .item .info_wrap .row .price {
        color: red;
        font-size: 35rpx;
        font-weight: 600; }
      .cart_content .main .item .info_wrap .row .number {
        font-weight: 600;
        font-size: 32rpx; }

