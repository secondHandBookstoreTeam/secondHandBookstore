/* pages/search/index.scss */
page {
  background-color: #dedede;
  padding: 20rpx; }

.root_wrap .search_row {
  height: 75rpx;
  display: flex; }
  .root_wrap .search_row input {
    flex: 6;
    height: 100%;
    background-color: white;
    padding-left: 30rpx;
    border-radius: 90rpx 0 0 90rpx; }
  .root_wrap .search_row .rightRadius {
    border-radius: 90rpx; }
  .root_wrap .search_row button {
    flex: 2;
    height: 100%;
    padding: 0;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 0 90rpx 90rpx 0; }
.root_wrap .search_content {
  background-color: white;
  margin-top: 30rpx;
  border-radius: 15rpx; }
  .root_wrap .search_content .search_item {
    font-size: 26rpx;
    display: flex;
    padding: 15rpx;
    align-items: center;
    border-bottom: 1rpx solid #ccc; }
    .root_wrap .search_content .search_item text {
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical; }
