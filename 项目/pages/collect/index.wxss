.first_tab .goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
  padding: 10rpx 5rpx; }
  .first_tab .goods_item .img_wrap {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center; }
    .first_tab .goods_item .img_wrap image {
      width: 70%; }
  .first_tab .goods_item .info_wrap {
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding-top: 15rpx; }
    .first_tab .goods_item .info_wrap .goods_name {
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical; }
    .first_tab .goods_item .info_wrap .goods_price {
      color: var(--themeColor);
      font-size: 32rpx; }
